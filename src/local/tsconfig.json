{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "../../dist",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
  